{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "echo",
            "type": "shell",
            "command": "./.vscode/build.sh",
            "args": [
                "\"${file}\"",
                "\"${fileBasenameNoExtension}\"",
                "\"system/oracle@localhost:32769\/xe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // use this to get any database errors (from user_errors view) listed in the "Problems" pane in VS Code
            "problemMatcher": {
                "owner": "plsql",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": [
                    {
                        "regexp": "(.*) (\\d*)\/(\\d*) (.*?) (.*)",
                        "severity": 1,
                        "line": 2,
                        "column": 3,
                        "file": 4,
                        "message": 5,
                        "loop": true
                    }
                ]
                
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}